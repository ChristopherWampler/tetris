{
  "name": "tetris",
  "version": "0.1.0",
  "description": "A Hitchhiker's Guide to the Galaxy themed Tetris game with Node.js backend",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "tetris",
    "game",
    "hitchhikers-guide",
    "canvas",
    "express",
    "typescript",
    "learning-project"
  ],
  "author": "Chris",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChristopherWampler/tetris.git"
  },
  "bugs": {
    "url": "https://github.com/ChristopherWampler/tetris/issues"
  },
  "homepage": "https://github.com/ChristopherWampler/tetris#readme",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}

